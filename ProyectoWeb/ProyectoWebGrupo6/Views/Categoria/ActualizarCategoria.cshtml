@model ProyectoWebGrupo6.Entidades.TiposCategorias
@{
    ViewBag.Title = "ActualizarCategoria";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Actualizar Categoría</h3></div>
                            <div class="card-body">
                                @if (ViewBag.msjPantalla != null)
                                {
                                    <div class="alert alert-warning" role="alert" style="text-align:center">
                                        @ViewBag.MsjPantalla
                                    </div>
                                }
                                @using (Html.BeginForm("ActualizarCategoria", "Categoria", FormMethod.Post))
                                {
                                    @Html.HiddenFor(m => m.CategoriaId)
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                @Html.TextBoxFor(m => m.NombreCategoria, new { @class = "form-control form-control-user", @placeholder = "Ingrese la categoría", @type = "Text", @Id = "NombreCategoria" })
                                                <label for="Nombre">Nombre de la categoría</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                @Html.DropDownListFor(m => m.Estado, ViewBag.TiposEstado as List<SelectListItem>, new { @class = "form-control form-control-user", @required = "true", @Id = "Estado" })
                                                <label for="Estado">Estado</label>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <input type="submit" class="btn btn-block InputColor" value="Actualizar Categoría"></input>
                                        </div>
                                    </div>
                                }
                            </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="@Url.Action("MantenimientoCategorias", "Categoria")">Volver a categorías</a></div>
                                    </div>
                                </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

