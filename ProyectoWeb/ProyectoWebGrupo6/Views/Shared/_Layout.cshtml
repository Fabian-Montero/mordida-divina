<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>La Mordida Divina</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/Estilos/img/logo.png" />

    <link href="~/Estilos/css/styles.css" rel="stylesheet" />
    <link href="~/Estilos/css/styleP.css" rel="stylesheet" />
    <link href="~/Estilos/css/otros.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <link href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.7/dist/sweetalert2.min.css" rel="stylesheet" />

    <link href="~/Estilos/css/animate.min.css" rel="stylesheet" />

</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbarColor">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-0 navlinkColor" href="@Url.Action("ConsultarProducto", "Producto")">
            <img style="width: 1em; height: 1em; margin-right: 0.3em; vertical-align: middle;" src="~/Estilos/img/logo.png" />
            <span style="vertical-align: middle;">La Mordida Divina</span>
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0 navlinkColor" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <a href="https://www.instagram.com/lamordidadivina/" target="_blank"><img src="~/Iconos/image_2024-03-24_153351547-removebg-preview.png" height=100% width=100% /></a>
        <a href="https://www.facebook.com/profile.php?id=100063706025645&locale=es_LA" target="_blank"><img src="~/Iconos/image_2024-03-24_155055477-removebg-preview.png" height=85% width=100% /></a>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle navlinkColor" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>


                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item toPress" href="@Url.Action("ModificarUsuario", "Usuario")">Configuraciones del perfil</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item toPress" href="@Url.Action("CerrarSesionUsuario", "Usuario")">Cerrar sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sideNavbarColor" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (Session["RolUsuario"] != null && Session["RolUsuario"].ToString() == "1")
                        {
                            <div class="sb-sidenav-menu-heading" style="color: #41162d">Administrador</div>
                            <a class="nav-link navlinkColor" href="@Url.Action("ConsultarProducto", "Producto")">
                                <div class="sb-nav-link-icon"><i class="fas fa-shopping-basket"></i></div>
                                Productos
                            </a>

                            <a class="nav-link navlinkColor" href="@Url.Action("MantenimientoUsuarios", "Usuario")">
                                <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                                Mantenimiento Usuarios
                            </a>
                            <a class="nav-link navlinkColor" href="@Url.Action("MantenimientoProductos", "Producto")">
                                <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                                Mantenimiento Productos
                            </a>
                            <a class="nav-link navlinkColor" href="@Url.Action("MantenimientoCategorias", "Categoria")">
                                <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                                Mantenimiento Categorías
                            </a>
                            <a class="nav-link navlinkColor" href="@Url.Action("PedidosMantenimiento", "Carrito")">
                                <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                                Mantenimiento <br /> Pedidos
                            </a>
                        }

                        @if (Session["RolUsuario"] != null && Session["RolUsuario"].ToString() == "2")
                        {
                            <div class="sb-sidenav-menu-heading" style="color: #41162d">Cliente</div>
                            <a class="nav-link navlinkColor" href="@Url.Action("ConsultarProducto", "Producto")">
                                <div class="sb-nav-link-icon"><i class="fas fa-shopping-basket"></i></div>
                                Productos
                            </a>
                            <a class="nav-link navlinkColor" href="@Url.Action("ConsultaCarrito", "Carrito")">
                                <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i> @Session["Cantidad"].ToString() </div>
                                Carrito
                            </a><a class="nav-link navlinkColor" href="@Url.Action("ConsultarPedidos", "Carrito")">
                                <div class="sb-nav-link-icon"><i class="fas fa-file-invoice"></i></div>
                                Mis pedidos
                            </a>
                        }

                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small" style="color:#ffffff">
                        Registrado como:
                    </div>
                    @if (Session["NombreCompleto"] != null)
                    {
                        <div style="color:#ffffff">@Session["NombreCompleto"].ToString()</div>
                        <div style="color:#ffffff">@Session["NombreRol"].ToString()</div>
                    }
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">La mordida divina @DateTime.Now.Year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Estilos/js/scripts.js"></script>
    <script src="~/Estilos/jquery/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/Estilos/js/easing.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.7/dist/sweetalert2.all.min.js"></script>
</body>
</html>
