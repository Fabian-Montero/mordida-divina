@model ProyectoWebGrupo6.Entidades.Usuario
@{
    ViewBag.Title = "Inicio de Sesión";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}


<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Inicio de Sesión</h3></div>
                            <div class="card-body">

                                @if (ViewBag.MsjPantalla != null)
                                {
                                    <div class="alert alert-warning" role="alert" style="text-align:center">
                                        @ViewBag.MsjPantalla
                                    </div>
                                }
                                @using (Html.BeginForm("IniciarSesionUsuario", "Usuario"))
                                {
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", @placeholder = "Ingrese su correo electrónico", @type = "Email", @required = "true", @Id = "Email" })
                                        <label for="Email">Correo Electrónico</label>
                                    </div>
                                    <div class="form-floating mb-3">

                                        @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control form-control-user", @placeholder = "Ingrese su contraseña", @type = "Password", @required = "true", @Id = "Contrasenna" })
                                        <label for="Contrasenna">Contraseña</label>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <a class="small" href="@Url.Action("EnvioCodigoAcceso", "Usuario")">¿Olvidaste la Contraseña?</a>
                                        <input type="submit" class="btn btn-user btn-block InputColor"  value="Iniciar Sesión">
                                    </div>
                                }

                            </div>
                            <div class="card-footer text-center py-3">
                                <div class="small"><a href="@Url.Action("RegistrarUsuario", "Usuario")">¿Necesitas una cuenta? Registrate!</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>



